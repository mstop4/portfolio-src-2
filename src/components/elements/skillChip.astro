---
type Props = {
  imageName: string,
  label: string,
  animationDelay: number
}

const { imageName, label, animationDelay } = Astro.props;
---

<li class="skillChip__container" style={`animation-delay: ${animationDelay}s`}>
  <img
    src={`../img/finalized/skills/${imageName}`}
    alt={label}
    class="skillChip__icon"
  >
  <p>{label}</p>
</li>

<style>
  @keyframes skill-entering {
    from {
      transform: scale(0) rotate(43deg);
      opacity: 0;
    }

    to {
      transform: scale(1) rotate(0deg);
      opacity: 1;
    }
  }

  .skillChip__container {
    margin: 0.75rem 1.25rem;
    max-width: 90px;
    color: white;
    display: flex;
    text-align: center;
    flex-direction: column;
    align-items: center;
    list-style-type: none;
  }

  .skillChip__container--appear {
    animation: skill-entering 0.6s var(--ease-out-back) 0s both;
  }

  .skillChip__icon {
    width: 9dvmax;
    max-width: 100%;
    background-color: white;
    border-radius: 50%;
    border: #acdee8 solid 0.5rem;
  }
</style>