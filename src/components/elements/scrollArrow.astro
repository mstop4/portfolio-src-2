---
type Props = {
  id: string
};

const { id } = Astro.props;
---
<div id={id} class="scrollArrow__wrapper scrollArrow__wrapper--show">
  <div class="scrollArrow__shape"></div>
</div>

<style>
  @keyframes scrollArrow-bobbing{
    0% { transform: translateY(10px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(10px); }
  }

  @keyframes scrollArrow-showing {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes scrollArrow-hiding {
    from { opacity: 1; }
    to { opacity: 0; }
  }

	.scrollArrow__wrapper {
    position: fixed;
    bottom: 50px;
	}

  .scrollArrow__shape {
    width: 0;
    height: 0;
    border-top: 30px solid rgba(255, 255, 255, 0.75);
    border-left: 30px solid transparent;
    border-right: 30px solid transparent;
    animation-name: scrollArrow-bobbing;
    animation-timing-function: ease-in-out;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-delay: 1.25s;
  }

  .scrollArrow__wrapper--show {
		animation-name: scrollArrow-showing;
		animation-duration: 1s;
		animation-fill-mode: both;
    animation-iteration-count: 1;
    animation-delay: 2.75s;
  }

  .scrollArrow__wrapper--hide {
		animation-name: scrollArrow-hiding;
		animation-duration: 0.5s;
		animation-fill-mode: both;
    animation-iteration-count: 1;
    animation-delay: 0s;
  }
</style>