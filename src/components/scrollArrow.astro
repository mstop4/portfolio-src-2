<div class="scrollArrow__wrapper">
  <div class="scrollArrow__shape"></div>
</div>

<style>
  @keyframes bobbing {
    0% { transform: translateY(10px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(10px); }
  }

  @keyframes scrollArrow__entering {
    from { opacity: 0; }
    to { opacity: 1; }
  }

	.scrollArrow__wrapper {
    position: absolute;
    bottom: calc(100px + 17.5dvh);
		animation-name: scrollArrow__entering;
		animation-duration: 1s;
		animation-fill-mode: both;
    animation-iteration-count: 1;
    animation-delay: 2.75s;
	}

  .scrollArrow__shape {
    width: 0;
    height: 0;
    border-top: 30px solid rgba(255, 255, 255, 0.75);
    border-left: 30px solid transparent;
    border-right: 30px solid transparent;
    animation-name: bobbing;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-delay: 1.25s;
  }
</style>